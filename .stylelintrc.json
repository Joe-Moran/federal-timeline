{
  "extends": ["stylelint-config-recess-order"],
  "rules": {
    "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
    "length-zero-no-unit": true,
    "value-keyword-case": ["lower", { "ignoreFunctions": ["v-bind"] }],
    "declaration-property-unit-allowed-list": { "line-height": [] }
  }
}
